class Solution {
public:
    int mod = 1e9 + 7;
    int numSub(string s) {
        int n = s.length();
        int ans = 0;
        int cnt = 0;
        for(int i=0; i<n; i++){
            if(s[i] == '1'){
                cnt++;
            }
            else{
                ans = ((ans % mod) + (((long long)(cnt%mod) * ((cnt+1)%mod))%mod))%mod;
                cnt = 0;
            }
        }
        ans = ((ans % mod) + ((cnt * (cnt+1))%mod))%mod;
        return ans/2;
    }
};
