class Solution {
public:
    int maxFreqSum(string s) {
        int n = s.length();
        vector<int> hash(26,0);
        int vowel = 0;
        int cnst = 0;

        for(int i=0; i<n; i++){
            if(s[i] == 'a'||s[i] == 'e'||s[i] == 'i'||s[i] == 'o'||s[i] == 'u'){
                hash[s[i]-'a']++;
                vowel = max(vowel,hash[s[i]-'a']);
            }
            else{
                hash[s[i]-'a']++;
                cnst = max(cnst,hash[s[i]-'a']);
            }
        }

        return cnst+vowel;
    }
};
