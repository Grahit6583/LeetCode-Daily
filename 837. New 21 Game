class Solution {
public:
    double new21Game(int n, int k, int maxPts) {
        vector<double> prob(n+1, 0.0);

        prob[0] = 1;
        double sum = (k==0) ? 0 : 1;

        for(int i=1; i<=n; i++){
            prob[i] = sum / maxPts;
            if(i < k){
                sum += prob[i];
            }
            if(i-maxPts >= 0 && i - maxPts < k){
                sum -= prob[i-maxPts];
            }
        }

        return accumulate(begin(prob)+k, end(prob),0.0);
    }
};
