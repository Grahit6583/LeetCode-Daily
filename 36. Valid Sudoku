class Solution {
public:
    bool isValidSudoku(vector<vector<char>>& board) {
        for (int i = 0; i < 9; i++) {
            bool row[10] = {false};
            bool col[10] = {false};
            for (int j = 0; j < 9; j++) {
                // row check
                if (board[i][j] != '.') {
                    if (row[board[i][j] - '0'])
                        return false;
                    row[board[i][j] - '0'] = true;
                }

                // col check
                if (board[j][i] != '.') {
                    if (col[board[j][i] - '0'])
                        return false;
                    col[board[j][i] - '0'] = true;
                }
            }
        }

        for (int br = 0; br < 3; ++br) {
            for (int bc = 0; bc < 3; ++bc) {
                bool seen[10] = {false};
                for (int r = br * 3; r < br * 3 + 3; ++r) {
                    for (int c = bc * 3; c < bc * 3 + 3; ++c) {
                        if (board[r][c] == '.')
                            continue;
                        if (seen[board[r][c] - '0'])
                            return false; // duplicate
                        seen[board[r][c] - '0'] = true;
                    }
                }
            }
        }
        return true;
    }
};
