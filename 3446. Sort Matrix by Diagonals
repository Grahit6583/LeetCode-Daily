class Solution {
public:
    vector<vector<int>> sortMatrix(vector<vector<int>>& grid) {
        int n = grid.size();
        vector<vector<int>> ans(n,vector<int>(n,0));
        for(int i=0; i<n; i++){
            int x = i;
            int y = 0;
            vector<int> temp;
            while(x<n && y<n){
                temp.push_back(grid[x++][y++]);
            }
            sort(temp.begin(),temp.end());
            reverse(temp.begin(),temp.end());
            int l = temp.size();
            x=i;
            y=0;
            for(int k=0; k<l; k++){
                ans[x++][y++] = temp[k];
            }
        }

        for(int j=1; j<n; j++){
            int y=j;
            int x=0;
            vector<int> temp;
            while(y<n && x<n){
                temp.push_back(grid[x++][y++]);
            }
            sort(temp.begin(),temp.end());
            y=j;
            x=0;
            int l = temp.size();
            for(int k=0; k<l; k++){
                ans[x++][y++] = temp[k];
            }
        }

        return ans;
    }
};
