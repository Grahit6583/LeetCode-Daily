class Solution {
public:
    vector<int> findnse(vector<int> &arr,int n){
        vector<int> nse(n,n);
        stack<int> st;

        for(int i=n-1; i>=0; i--){
            while(!st.empty() && arr[st.top()] >= arr[i]){
                st.pop();
            }

            nse[i] = !st.empty() ? st.top() : n;
            st.push(i);
        }

        return nse;
    }

    vector<int> findpse(vector<int> &arr,int n){
        vector<int> pse(n,0);
        stack<int> st;

        for(int i=0; i<n; i++){
            while(!st.empty() && arr[st.top()] > arr[i]){
                st.pop();
            }

            pse[i] = st.empty() ? -1 : st.top();
            st.push(i);
        }

        return pse;
    }
    long long sumSubarrayMins(vector<int>& arr) {
        int n = arr.size();

        vector<int> nse = findnse(arr,n);
        vector<int> pse = findpse(arr,n);
        int mod = (int)(1e9+7);
        long long total = 0;
        for(int i=0; i<n; i++){
            long long left = i-pse[i];
            long long right = nse[i]-i;

            total = (total + (left * right * 1LL * arr[i]));
        }

        return total;
    }

    vector<int> findnge(vector<int> &arr,int n){
        vector<int> nse(n,n);
        stack<int> st;

        for(int i=n-1; i>=0; i--){
            while(!st.empty() && arr[st.top()] <= arr[i]){
                st.pop();
            }

            nse[i] = !st.empty() ? st.top() : n;
            st.push(i);
        }

        return nse;
    }

    vector<int> findpge(vector<int> &arr,int n){
        vector<int> pse(n,0);
        stack<int> st;

        for(int i=0; i<n; i++){
            while(!st.empty() && arr[st.top()] < arr[i]){
                st.pop();
            }

            pse[i] = st.empty() ? -1 : st.top();
            st.push(i);
        }

        return pse;
    }
    long long sumSubarrayMaxs(vector<int>& arr) {
        int n = arr.size();

        vector<int> nse = findnge(arr,n);
        vector<int> pse = findpge(arr,n);
        int mod = (int)(1e9+7);
        long long total = 0;
        for(int i=0; i<n; i++){
            long long left = i-pse[i];
            long long right = nse[i]-i;

            total = (total + (left * right * 1LL * arr[i]));
        }

        return total;
    }    
    long long subArrayRanges(vector<int>& nums) {
        return sumSubarrayMaxs(nums) - sumSubarrayMins(nums);
    }
};
