class Solution {
public:
    string removeKdigits(string num, int k) {
        int n = num.length();
        if(n == k){
            return "0";
        }
        string ans = "";

        for(int i=0; i<n; i++){
            while((ans.length() != 0) && (ans.back()-'0' > num[i]-'0') && k){
                ans.pop_back();
                k--;
            }
            ans.push_back(num[i]);
        }
        while(k != 0){
            ans.pop_back();
            k--;
        }
        if(ans.length() == 0){
            return "0";
        }
        int i=0;
        int l = ans.size();
        while(i<l && ans[i] == '0'){
            i++;
        }
        ans = ans.substr(i);

        return ans.empty() ? "0" : ans;
    }
};
