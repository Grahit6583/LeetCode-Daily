class Solution {
public:
    int beautySum(string s) {
        int n = s.length();

        int sum = 0;

        for(int i=0; i<n; i++){
            vector<int> hash(26,0);
            hash[s[i]-'a']++;
            for(int j=i+1; j<n; j++){
                hash[s[j]-'a']++;
                int maxi = 0;
                int mini = INT_MAX;
                for(int i=0; i<26; i++){
                    if(hash[i] == 0) continue;
                    maxi = max(maxi,hash[i]);
                    mini = min(mini,hash[i]);
                }
                sum += (maxi-mini);
            }
        }

        return sum;
    }
};
