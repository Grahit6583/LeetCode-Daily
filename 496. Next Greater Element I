class Solution {
public:
    vector<int> nextGreaterElement(vector<int>& nums1, vector<int>& nums2) {
        int n1 = nums1.size();
        int n2 = nums2.size();

        vector<int> hash(10000, 0);
        stack<int> st;
        st.push(nums2[n2 - 1]);
        hash[nums2[n2-1]] = -1;
        for (int i = n2 - 2; i >= 0; i--) {
            while (!st.empty() && st.top() < nums2[i]) {
                st.pop();
            }
            
            !st.empty() ? hash[nums2[i]] = st.top() : hash[nums2[i]] = -1;
            st.push(nums2[i]);
        }
        vector<int> ans;
        for (int i = 0; i < n1; i++) {
            ans.push_back(hash[nums1[i]]);
        }

        return ans;
    }
};
