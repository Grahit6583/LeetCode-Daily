class Solution {
public:
    string largestGoodInteger(string num) {
        int n = num.size();

        int t = -1;  // store max digit
        for(int i = 0; i <= n - 3; i++){
            if(num[i] == num[i+1] && num[i+1] == num[i+2]){
                int r = num[i] - '0'; // convert char to int
                if(r > t){
                    t = r;
                }
            }
        }

        if (t == -1) return ""; // no good integer found
        string ans(3, '0' + t);  // repeat the digit 3 times
        return ans;
    }
};
