class Solution {
public:
    vector<string> removeAnagrams(vector<string>& words) {
        int n = words.size();
        vector<string> ans;
        ans.push_back(words[0]);
        for(int i=1; i<n; i++){
            string b = ans.back();
            string a = words[i];
            sort(b.begin(),b.end());
            sort(a.begin(),a.end());
            if(a==b){
                continue;
            }

            ans.push_back(words[i]);
        }

        return ans;
    }
};
