class Solution {
public:
    int maxScore(vector<int>& nums, int k) {
        int n = nums.size();
        int sum = 0;
        
        for(int i=n-k; i<n; i++){
            sum += nums[i];
        }

        int ans = sum;

        for(int i = 0; i < k; i++) {
            sum -= nums[n - k + i];
            sum += nums[i];
            ans = max(ans, sum);
        }

        return ans;
    }
};
