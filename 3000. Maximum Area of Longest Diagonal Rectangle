class Solution {
public:
    int areaOfMaxDiagonal(vector<vector<int>>& dim) {
        double dia = 0;
        int area = 0;
        int n = dim.size();

        for(int i=0; i<n; i++){
            double d = sqrt((dim[i][0]*dim[i][0]) + (dim[i][1]*dim[i][1]));
            if(d > dia){
                dia = d;
                area = dim[i][0] * dim[i][1];
            }
            else if(d == dia && area < (dim[i][0]*dim[i][1])){
                area = dim[i][0]*dim[i][1];
            }
        }

        return area;
    }
};
