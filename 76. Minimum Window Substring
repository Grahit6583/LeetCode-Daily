class Solution {
public:
    string minWindow(string s, string t) {
        unordered_map<char,int> mp;

        int m = t.length();
        for(int i=0; i<m; i++){
            mp[t[i]]++;
        }

        int n = s.length();
        int cnt = 0;
        int mini = INT_MAX;
        int ind = -1;

        int l=0;
        int r=0;

        while(r<n){
            if(mp[s[r]] > 0){
                cnt++;
            }

            mp[s[r]]--;

            while(l<=r && cnt == m){
                if((r-l+1) < mini){
                    mini = (r-l+1);
                    ind = l;
                }
                if (mp.count(s[l])) {
                    mp[s[l]]++;
                    if (mp[s[l]] > 0) {
                        cnt--;
                    }
                }
                l++;
            }

            r++;
        }

        return ind == -1 ? "" : s.substr(ind,mini);
    }
};
