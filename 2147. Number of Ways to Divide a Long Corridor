class Solution {
public:
    int MOD = 1e9+7;
    int numberOfWays(string corridor) {
        int n = corridor.length();
        vector<int> ind;
        
        for(int i=0; i<n; i++){
            if(corridor[i] == 'S'){
                ind.push_back(i);
            }
        }

        int l = ind.size();
        if(l%2 == 1 || l == 0){
            return 0;
        }

        int prev = ind[1];
        long long cnt = 1;
        for(int i=2; i<l; i+=2){
            cnt = ((cnt % MOD)*((ind[i]-prev)%MOD))%MOD;
            prev = ind[i+1];
        }

        return (int)cnt;
    }
};
