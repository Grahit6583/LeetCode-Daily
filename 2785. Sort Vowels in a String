class Solution {
public:
    string sortVowels(string s) {
        int n = s.length();
        string t = "";
        string vow = "";

        for(int i=0; i<n; i++){
            if(s[i] == 'a' || s[i] == 'e' || s[i] == 'i' || s[i] == 'o' || s[i] == 'u' || s[i] == 'A' || s[i] == 'E' || s[i] == 'I' || s[i] == 'O' || s[i] == 'U'){
                vow += s[i];
                t += '*';
            }
            else{
                t += s[i];
            }
        }

        sort(vow.begin(),vow.end());

        int j = 0;
        for(int i=0; i<n; i++){
            if(t[i] == '*'){
                t[i] = vow[j];
                j++;
            }
        }

        return t;
    }
};
