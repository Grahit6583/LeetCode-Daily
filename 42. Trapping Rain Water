class Solution {
public:
    int trap(vector<int>& height) {
        int n = height.size();
        if(n == 1){
            return 0;
        }
        int rmax,lmax,total,r,l;

        rmax=lmax=total=0;
        l=0;
        r=n-1;

        while(l<r){
            if(height[l] <= height[r]){
                if(lmax > height[l]){
                    total += (lmax-height[l]);
                    l++;
                }
                else{
                    lmax = height[l];
                    l++;
                }
            }
            else{
                if(rmax > height[r]){
                    total += (rmax-height[r]);
                    r--;
                }
                else{
                    rmax = height[r];
                    r--;
                }
            }
        }

        return total;
    }
};
