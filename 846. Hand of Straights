class Solution {
public:
    bool isNStraightHand(vector<int>& hand, int g) {
        int n = hand.size();

        if(n%g){
            return false;
        }

        map<int,int> mp;

        for(int i=0; i<n; i++){
            mp[hand[i]]++;
        }

        while(!mp.empty()){
            int start = mp.begin()->first;

            for(int i=0; i<g; i++){
                int card = start + i;

                if(mp[card] == 0){
                    return false;
                }

                mp[card]--;
                if(mp[card] == 0){
                    mp.erase(card);
                }
            }
        }

        return true;
    }
};
